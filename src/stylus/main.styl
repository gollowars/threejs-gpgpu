@import "./_normalize"
@import "./_reset"
@import "./_setting"
@import "./_animate"
@import "./_util"
@import 'jeet'
@import './_fullpage.min'

$borderWidth = 15px
$borderColor = #2c3e50

$loadingZIndex = 101

head, body
  width:100%
  height:100%
  overflow: hidden
  top:0
  left:0
  margin:0
  padding:0

body 
  box-sizing: border-box
//////////////////////////////
// header
//////////////////////////////
header
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 70px
  z-index: 2
  box-sizing: border-box
  padding: 12px 10px
  overflow: hidden
  .header-title
    float: left
  
//////////////////////////////
// nav
//////////////////////////////
nav
  // width: 150px
  // float: right
  +sp($pcWidth)
    width: 100%
    // position: fixed
    // top: 0
    // left: 0
  li
    display: inline-block
    padding: 0 2px
    font-size: .8rem
    +sp($pcWidth)
      text-align: center
    
    a
      text-decoration: none
    a:hover
      text-decoration: underline
//////////////////////////////
// footer
//////////////////////////////
footer
  clear: both
  padding: 15px 30px

//////////////////////////////
// loading
//////////////////////////////
.loading
  position: fixed
  top: 0
  right: 0
  width: 100%
  height: 100%
  overflow: hidden
  background-color: #eee
  z-index: $loadingZIndex
//////////////////////////////
// component
//////////////////////////////
.container
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden
  

.fullpage-main__section
  box-sizing: border-box
  background-size: cover
  background-position: center center
  


//////////////////////////////
// console
//////////////////////////////
#consoleView
  position: fixed
  width: 50%
  bottom: 0
  right: 0
  background-color: rgba(255,255,255,1.0)
  padding: 5px 10px
  opacity: 0.7
  h1,h2,h3,h4,h5,p
    font-size: 0.8rem
    mix-blend-mode: exclusion